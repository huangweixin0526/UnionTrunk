<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="hor_line_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_0_5dip</item>
        <item name="android:background">@drawable/bg_hor_line</item>
    </style>

    <style name="ver_line_divider">
        <item name="android:layout_width">@dimen/size_0_5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_ver_line</item>
    </style>

    <style name="red_num_forecast">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_18dip</item>
    </style>
    
    <style name="blue_num_forecast">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_18dip</item>
    </style>

</resources>