<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/two_data_root_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/two_period_num_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="日期"
        android:textSize="@dimen/size_18dip" />

    <View style="@style/ver_line_divider" />

    <TextView
        android:id="@+id/two_lottery_date_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="期数"
        android:textSize="@dimen/size_18dip" />

    <View style="@style/ver_line_divider" />

    <include layout="@layout/two_data_preview_item_lay" />

    <include layout="@layout/red_num_forecast_item_layout" />

    <include layout="@layout/blue_num_forecast_item_layout" />

</LinearLayout>